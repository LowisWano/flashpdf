generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
}

model User {
  id            String     @id
  name          String?
  decks         Deck[]
}

model Deck {
  id            String     @default(cuid()) @id
  title         String
  description   String
  topics        String[]
  studyProgress Int
  cardCount     Int
  accuracy      Int
  lastStudied   DateTime
  isStarred     Boolean
  user          User      @relation(fields: [userId], references: [id])
  userId        String
  flashcards    Flashcard[]
}

model Flashcard {
  id            String     @default(cuid()) @id
  term          String
  definition    String    
  deck          Deck       @relation(fields: [deckId], references: [id], onDelete: Cascade)
  deckId        String
}